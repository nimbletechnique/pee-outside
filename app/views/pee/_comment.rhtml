<div id='<%= "comment-#{comment.id}" %>'>
<% if string_not_empty(comment.name) or string_not_empty(comment.location) %>
	<strong>
		<% if string_not_empty(comment.name) %>
			<%= comment.name %>
			<% if string_not_empty(comment.location) %>
				, 
			<% end %>
		<% end %>
		<%= comment.location %>
	</strong>
	<br/>
<% end %>
<i><%= format_time comment.created %></i><br/>
<%= h(comment.data) %>
</div>
<br/>
<% if is_logged_in? %>
  <%= link_to "Delete above comment", :controller=>:admin, :action=>:delete_comment, :id=>comment %>
  <p/>
<% end %>
<hr/>
<br/>
